@model IEnumerable<Course>
@foreach(var course in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-controller="course" asp-action="detail" asp-route-id="@course.Id">
                    <img src="img/course/@course.ImgUrl" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a href="course-details.html">@course.Name</a></h3>
                <p>@course.Desc</p>
                <a class="default-btn" asp-controller="course" asp-action="detail" asp-route-id="@course.Id">read more</a>

           @*      <form asp-controller="Basket" asp-action="Add" asp-route-courseId="@course.Id" course-id="courseId" method="post">
                    <button type="submit" class="default-btn buy">Buy</button>
                </form> *@
            </div>
        </div>
    </div>
}

