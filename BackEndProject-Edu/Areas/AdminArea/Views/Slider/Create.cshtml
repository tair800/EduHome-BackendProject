@using BackEndProject_Edu.Areas.AdminArea.ViewModels.SliderVMs
@model SliderCreateVM

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Create form</h4>
                <form enctype="multipart/form-data" asp-action="create" method="post" class="forms-sample">

                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Photo"></span> @* //errorlari gosderir *@

                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Title"></span> @* //errorlari gosderir *@

                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input asp-for="Desc" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Desc"></span> @* //errorlari gosderir *@

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-action="index" class="btn btn-light">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
