@model CourseCreateVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Create New Course</h4>
                    <form enctype="multipart/form-data" asp-action="Create" method="post" class="forms-sample">

                        <div class="form-group">
                            <label asp-for="ImgUrl" class="form-label"></label>
                            <input asp-for="ImgUrl" type="file" class="form-control">
                            <span class="text-danger" asp-validation-for="ImgUrl"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter course name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desc" class="form-label"></label>
                            <textarea asp-for="Desc" class="form-control" rows="3" placeholder="Enter course description"></textarea>
                            <span class="text-danger" asp-validation-for="Desc"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="About" class="form-label"></label>
                            <textarea asp-for="About" class="form-control" rows="3" placeholder="Enter details about the course"></textarea>
                            <span class="text-danger" asp-validation-for="About"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Apply" class="form-label"></label>
                            <input asp-for="Apply" class="form-control" placeholder="Application procedure">
                            <span class="text-danger" asp-validation-for="Apply"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Duration" class="form-label"></label>
                            <input asp-for="Duration" class="form-control" placeholder="Course duration">
                            <span class="text-danger" asp-validation-for="Duration"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Certification" class="form-label"></label>
                            <input asp-for="Certification" class="form-control" placeholder="Certification details">
                            <span class="text-danger" asp-validation-for="Certification"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Hours" class="form-label"></label>
                            <input asp-for="Hours" class="form-control" placeholder="Total hours">
                            <span class="text-danger" asp-validation-for="Hours"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Skill" class="form-label"></label>
                            <input asp-for="Skill" class="form-control" placeholder="Skills covered">
                            <span class="text-danger" asp-validation-for="Skill"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Language" class="form-label"></label>
                            <input asp-for="Language" class="form-control" placeholder="Language">
                            <span class="text-danger" asp-validation-for="Language"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StuNum" class="form-label"></label>
                            <input asp-for="StuNum" class="form-control" placeholder="Number of students">
                            <span class="text-danger" asp-validation-for="StuNum"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Assesment" class="form-label"></label>
                            <input asp-for="Assesment" class="form-control" placeholder="Assessment method">
                            <span class="text-danger" asp-validation-for="Assesment"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" placeholder="Course price">
                            <span class="text-danger" asp-validation-for="Price"></span>
                        </div>

                        <div class="form-group">
                            <label for="categorySelect" class="form-label">Categories</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                                <option value="">Select a category</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="tagSelect" class="form-label">Tags</label>
                            <select asp-for="TagIds" asp-items="@ViewBag.Tags" class="form-select">
                                <option value="">Select tags</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section script {
    <partial name="_ValidationPartial" />
}
