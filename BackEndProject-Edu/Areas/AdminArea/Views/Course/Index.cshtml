@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<CourseListVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/course/@course.ImgUrl" alt="" />
                                </td>
                                <td>
                                    @course.Name
                                 </td>
                                <td>
                                    @course.Date?.ToString("dd.MMMM.yyyy")
                                </td>
                                <td>
                                    @course.CategoryName
                                </td>
                                <td>
                                    <a class="btn btn-outline-facebook" asp-action="detail" asp-route-id="@course.Id"><i class="mdi mdi-account-card-details"></i></a>
                                    <a class="btn btn-outline-primary" asp-action="update" asp-route-id="@course.Id"><i class="mdi mdi-settings"></i></a>
                                    <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@course.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                              
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

