@model CourseDetailVM
<div class="container">
    <div class="row">
        <div class="card-body">


            <img src="~/img/course/@Model.ImgUrl" width="300" height="150" />

            <br />
            <h4>Name-<span>@Model.Name</span></h4>
            <br/>


            <h4>@Model.Date?.ToString("dd.MM.yyyy")</h4>
            

            <br />

            <p>
                Course About :@Model.About
            </p>

            <br />

            <p>
                Course Desc:@Model.Desc
            </p>

            <br />

            <p>
                Course Apply:@Model.Apply
            </p>

            <br />

            <p>
                Course Certification:@Model.Certification
            </p>

            <br />
          @*   todo:features and coursetags *@
            <p>
                Course Features:
        @*         Duration - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.Duration)))
                Skill - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.Skill)))
                Language - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.Language)))
                StudentLimit - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.StuNum)))
                Assesment - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.Assesment)))
                Price - @Html.Raw(string.Join(", ", Model.CourseFeatures?.Select(cf => cf.Features.Hours))) *@
            </p>
            <br />

            <p>
                Course Category:@Model.CategoryName
            </p>
            <br />
            <p>
                Course Tags:@Model.CourseTags
            </p>
            <a asp-action="index" class="btn btn-outline-dark">Go Back</a>

        </div>
    </div>
</div>
